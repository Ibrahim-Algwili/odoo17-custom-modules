<odoo>
    <!-- Form View -->

    <record id="change_state_wizard_view_form" model="ir.ui.view">
        <field name="name">change state wizard form</field>
        <field name="model">change.state.wizard</field>
        <field name="arch" type="xml">
            <form >
                <group>
                    <field name="property_id" invisible="1" />
                    <field name="state" required="1"/>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary" />
                    <button string="Cancel" special="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

    <record id="change_state_wizard_action" model="ir.actions.act_window"> <!-- act_window (will open view when you click) -->
        <field name="name">Change State</field>
        <field name="res_model">change.state.wizard</field> <!-- model name -->
        <field name="target">new</field>
        <field name="view_mode">form</field> <!-- to show just form view , default is (tree)-->
    </record>

</odoo>