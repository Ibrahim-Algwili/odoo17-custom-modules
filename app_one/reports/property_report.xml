<odoo>
    <record id="property_report" model="ir.actions.report">
        <field name="name">Property Report</field> <!-- will show to the user when he want to print the report -->
        <field name="model">property</field>
        <field name="report_type">qweb-pdf</field> <!-- or (qweb-pdf) -->
        <field name="binding_model_id" ref="model_property"/>
        <field name="binding_type">report</field> <!-- to make a button for the report -->
        <field name="report_name">app_one.property_report_template</field> <!-- put the template id here (myaddon.templateID) -->
    </record>

    <template id="property_report_template">
        <t t-call="web.html_container"> <!-- to say it's template (important to call it) -->
            <t t-call="web.external_layout">
                <t t-foreach="docs" t-as="o"> <!-- docs is variable that will take every record while looping -->
                    <h1 style="font-family: 'BebasNeue';">Property Report</h1>
                    <style>
                        table {
                        width: 100%;
                        border: 1px solid #b3addd;
                        border-collapse: collapse;
                        padding: 5px;
                        }
                        table th {
                        text-align : center;
                        border: 1px solid #b3addd;
                        padding: 5px;
                        background: #ffffff;
                        color: #313030;
                        font-style : italic;
                        }
                        table td {
                        border: 1px solid #b3addd;
                        text-align: center;
                        padding: 5px;
                        background: #ffffff;
                        color: #313030;
                        }
                    </style>
                    <table>
                        <thead>
                            <th colspan="4">General Information</th>
                        </thead>
                        <tbody>
                            <td>Name</td>
                            <td>
                                <t t-esc="o.name"/>
                            </td>
                            <td>Post Code</td>
                            <td>
                                <t t-esc="o.postcode"/>
                            </td>
                        </tbody>
                    </table>

                    <table>
                        <thead>
                            <th colspan="4">Additional Information</th>
                        </thead>
                        <tbody>
                            <td>Owner</td>
                            <td>
                                <strong t-field="o.owner_id"/>
                            </td>
                            <td>Phone</td>
                            <td>
                                <t t-esc="o.owner_phone"/>
                            </td>
                        </tbody>
                    </table>

                    <br/>

                    <table>
                        <thead>
                            <th>Description</th>
                            <th>Area(m2)</th>
                        </thead>
                        <tbody> <!-- to loop in bedrooms -->
                            <t t-foreach="o.line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <strong t-field="line.description"/>
                                    </td>
                                     <td>
                                        <t t-esc="line.area"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>

</odoo>