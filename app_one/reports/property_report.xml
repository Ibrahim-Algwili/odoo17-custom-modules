<odoo>
    <record id="property_report" model="ir.actions.report">
        <field name="name" >Property Report</field> <!-- will show to the user when he want to print the report -->
        <field name="model" >property</field>
        <field name="report_type" >qweb-pdf</field> <!-- or (qweb-html) -->
        <field name="binding_model_id" ref="model_property"/>
        <field name="binding_type">report</field> <!-- to make a button for the report -->
        <field name="report_name">app_one.property_report_template</field> <!-- put the template id here (myaddon.templateID) -->
    </record>

    <template id="property_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">

                <!-- ✅ CSS Styling -->
                <style>
                    h1 {
                        text-align: center;
                        color: #2c3e50;
                        font-size: 28px;
                        margin-bottom: 20px;
                        text-transform: uppercase;
                        border-bottom: 2px solid #3498db;
                        padding-bottom: 5px;
                    }

                    table {
                        width: 100%;
                        border-collapse: collapse;
                        margin-top: 20px;
                        font-size: 14px;
                    }

                    th {
                        background-color: #3498db;
                        color: white;
                        text-align: left;
                        padding: 8px;
                        font-weight: bold;
                        text-transform: capitalize;
                    }

                    td {
                        border: 1px solid #ddd;
                        padding: 8px;
                        vertical-align: top;
                    }

                    tr:nth-child(even) {
                        background-color: #f9f9f9;
                    }

                    tr:hover {
                        background-color: #eaf2f8;
                    }

                    .section-title {
                        background-color: #ecf0f1;
                        color: #2c3e50;
                        padding: 6px;
                        font-weight: bold;
                        border-left: 4px solid #3498db;
                        margin-top: 15px;
                    }

                    .field-label {
                        font-weight: bold;
                        width: 25%;
                        color: #2c3e50;
                    }
                </style>

                <!-- ✅ Report Body -->
                <t t-foreach="docs" t-as="rec">
                    <h1>Property Report</h1>

                    <div class="section-title">General Information</div>
                    <table>
                        <tbody>
                            <tr>
                                <td class="field-label">Name</td>
                                <td><t t-esc="rec.name"/></td>
                                <td class="field-label">Post Code</td>
                                <td><t t-esc="rec.postcode"/></td>
                            </tr>
                            <tr>
                                <td class="field-label">Description</td>
                                <td colspan="3"><t t-esc="rec.description"/></td>
                            </tr>
                            <tr>
                                <td class="field-label">Bedrooms</td>
                                <td><t t-esc="rec.bedrooms"/></td>
                                <td class="field-label">State</td>
                                <td><t t-esc="rec.state"/></td>
                            </tr>
                            <tr>
                                <td class="field-label">Owner</td>
                                <td><t t-esc="rec.owner_id.name"/></td>
                                <td class="field-label">Phone</td>
                                <td><t t-esc="rec.owner_phone"/></td>
                            </tr>
                        </tbody>
                    </table>
                </t>
            </t>
        </t>
    </template>

</odoo>