<odoo>
<!-- Level Three -->

    <!-- Tree View -->

    <record id="tag_view_tree" model="ir.ui.view">
        <field name="name">tag tree</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <!-- Form View -->

    <record id="tag_view_Form" model="ir.ui.view">
        <field name="name">Tag form</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form edit="1" create="1" delete="0">
                <sheet>
                    <!-- To make the name as header -->
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tag_action" model="ir.actions.act_window"> <!-- act_window (will open view when you click) -->
        <field name="name">Tag</field>
        <field name="res_model">tag</field> <!-- model name -->
    </record>

    <menuitem
        id="tag_menu_item"
        name="Tags"
        parent="configuration_menu"
        action="tag_action"
    />
</odoo>