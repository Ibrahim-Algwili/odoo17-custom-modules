<odoo>
<!-- Level Three -->

    <!-- Tree View -->

    <record id="property_view_tree" model="ir.ui.view">
        <field name="name">property tree</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <!-- (Permesions From Presentation Tier default is (0) for multi_edit , the others is (1) -->
            <tree class="header_style" decoration-danger="(is_late)" multi_edit="1" edit="1" create="1" delete="1" >
                <field name="name" />
                <field name="postcode" />
                <field name="is_late" invisible="1" />
                <field name="owner_id" />
                <field name="date_availability" />
                <field name="selling_price" />
                <field name="garden" />
                <field name="state" />
                <field name="active" />
                <field name="facades" optional="1" />
                <field name="garden_area" optional="1"/>
                <field name="bedrooms" optional="1"/>
                <field name="garage" optional="1"/>
                <field name="garden_orientation" optional="1"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->

    <record id="property_view_Form" model="ir.ui.view">
        <field name="name">property form</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <form edit="1" create="1" delete="1">
                <sheet>
                    <!-- Smart Button -->
                    <div name="button_box" class="oe_button_box">
                        <button name="action_open_related_owner" type="object"
                                string="Owner" icon="fa-user"  invisible="not owner_id" />
                    </div>

                    <!-- Widgets (web_ribbon) -->
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger"
                            invisible = 'active' /> <!-- invisible if active is true -->
                    <widget name="web_ribbon" title="Sold" bg_color="text-bg-success"
                            invisible="state != 'sold'" />

                    <header>
                        <!-- env -->
                        <button name="Env_action" type="object" string="Action" class="btn-primary" />

                        <button name="action" type="object" string="Action_TWO" class="btn-primary" />

                        <button name="get_properties" type="object" string="Test Call api" class="btn-primary" />

                        <button name="action_draft" type="object" string="Set To Draft" class="btn-primary"
                           invisible="state in ('draft' , 'closed') " />
                        <button name="action_pending" type="object" string="Pending" class="btn-secondary"
                           invisible="state != 'draft' " />
                        <button name="action_sold" type="object" string="Sold" class="btn-success"
                           invisible="state != 'pending'"  />

                        <field name="state" widget="statusbar" options="{'clickable' : 1}" readonly="1" />
                    </header>
                    <!-- To make the name as header -->
                    <div class="oe_title">
                        <label for="ref" />
                        <h1>
                            <field name="ref" />
                        </h1>
                        <label for="name" />
                        <h3>
                            <field name="name" readonly="state != 'draft'"/>
                        </h3>
                    </div>
                    <group>
                        <group string="General Info">
                            <field name="create_time" readonly="1"/>
                            <field name="next_time" readonly="1"/>
                            <field name="date_availability" required="1" readonly="state == 'closed'"/>
                            <field name="expected_selling_date" readonly="state == 'closed'" />
                            <field name="is_late" edit="0" invisible='1' />
                            <field name="postcode" readonly="state == 'closed'" />
                            <field name="expected_price" readonly="state == 'closed'" />
                            <field name="selling_price" readonly="state == 'closed'" />
                            <field name="diff" readonly="state == 'closed'"/>
                            <field name="bedrooms" readonly="state == 'closed'" />
                            <field name="facades" readonly="state == 'closed'" />
                            <field name="file" readonly="state == 'closed'" />
                            <field name="active" readonly="state == 'closed'" />
                        </group>
                        <group string="Additional Info">
                            <field name="best_price"  />
                            <field name="garden" readonly="state == 'closed'" />
                            <field name="garden_area" readonly="state == 'closed'" />
                            <field name="living_area" readonly="state == 'closed'" />
                            <field name="total_area"  />
                            <field name="garage" readonly="state == 'closed'" />
                            <field name="garden_orientation" readonly="state == 'closed'" />
                            <field name="property_type_id" />
                            <field name="tag_ids" widget="many2many_tags" readonly="state == 'closed'" />
                        </group>
                        <group string="Relation">
                            <field name="owner_id" readonly="state == 'closed'" />
                            <field name="owner_address" readonly="state == 'closed'" />
                            <field name="owner_phone" readonly="state == 'closed'" />
                        </group>
                        <group string="Descripion" groups="app_one.property_manager_group">
                            <field name="description" />
                        </group>
                    </group>
                    <!-- Lines & tables -->
                    <notebook>
                        <page string="bedrooms">
                            <field name="line_ids" readonly="state == 'closed'" >
                                <tree editable="button">
                                    <field name="description" />
                                    <field name="area" />
                                </tree>
                            </field>
                        </page>

                        <page string="Offers" groups="app_one.property_managers_group">
                            <field name="offer_ids" readonly="state == 'closed'" >
                                <tree editable="button">
                                    <field name="price" />
                                    <field name="partner_id" />
                                    <!-- Offer -->
                                    <button name="action_accept" type="object" string="Accept" icon="fa-check"
                                        invisible="status == 'accepted'" />
                                    <button name="action_refuse" type="object" string="Refuse" icon="fa-check"
                                         invisible="status == 'refused'" />
                                    <field name="status" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->

    <record id="property_view_search" model="ir.ui.view">
        <field name="name">property search</field>
        <field name="model">property</field>
        <field name="arch" type="xml">
            <search>
               <field name="postcode" />
               <field name="name" />

                <!-- Filters -->
                <filter name="is_garden" string="With Garden" domain="[('garden' , '=' , 'True')]" />
                <filter name="is_not_garden" string="Without Garden" domain="[('garden' , '!=' , 'True')]" />
                <filter name="is_garage" string="With Garage" domain="[('garage' , '=' , 'True')]" />
                <filter name="price_over_30" string="price > 30" domain="[('selling_price' , '>' , '30')]" />

                <!-- Group by -->
                <filter name="group_garden" string="Garden" context="{'group_by' : 'garden'}" />

            </search>
        </field>
    </record>

    <!-- Window Action -->
    <record id="property_action" model="ir.actions.act_window"> <!-- act_window (will open view when you click) -->
        <field name="name">Property</field>
        <field name="res_model">property</field> <!-- model name -->
    </record>

    <!-- Automated Actions -->
    <record id="check_selling_date_cron" model="ir.cron">
        <field name="name">Property: Check Selling Date</field>
        <field name="model_id" ref="model_property" />
        <field name="state">code</field>
        <field name="code">model.check_expected_selling_date()</field> <!-- Function name -->
        <field name="interval_number">1</field> <!-- every how much you run this logic -->
        <field name="interval_type">days</field> <!-- type of the time -->
        <field name="numbercall">-1</field> <!-- how many times you call this function (-1 unlimited) -->
        <field name="active">True</field>
    </record>


