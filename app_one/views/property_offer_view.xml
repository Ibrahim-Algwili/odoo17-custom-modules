<odoo>

    <record id="property_offer_tree" model="ir.ui.view">
        <field name="name">Offers Tree</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price" />
                <field name="status" />
                <field name="partner_id" />
                <field name="property_id" />
                <field name="validity" />
                <field name="date_deadline" />
            </tree>
        </field>
    </record>

    <record id="property_offer_form" model="ir.ui.view" >
        <field name="name">Offers Form</field>
        <field name="model">property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price" />
                        <field name="status" />
                        <field name="partner_id" />
                        <field name="property_id" />
                        <field name="validity" />
                        <field name="date_deadline" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="property_offer_action_window" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">property.offer</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="property_offer_menu"
        name="Offers"
        parent="configuration_menu"
        action="property_offer_action_window"
    />
<!--        groups="app_one.property_managers_group"-->

</odoo>