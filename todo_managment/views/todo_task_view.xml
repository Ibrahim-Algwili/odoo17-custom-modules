<odoo>
    <!-- Tree View -->
    <record id="view_todo_tree" model="ir.ui.view">
        <field name="name">todo.task.tree</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <tree multi_edit="1" decoration-danger="(is_late)">
                <field name="name"/>
                <field name="description"/>
                <field name="due_date"/>
                <field name="partner_id"/>
                <field name="status"/>
                <field name="active"/>
                <field name="is_late" optional="1"/>
            </tree>
        </field>
    </record>


    <!-- Form view -->
    <record id="view_todo_form" model="ir.ui.view" >
        <field name="name">todo.task.form</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <widget name="web_ribbon" title="Completed" bg_color="text-bg-success"
                           invisible="status != 'completed'"
                    />
                    <widget name="web_ribbon" title="Archieved" bg_color="text-bg-danger"
                           invisible="active"
                    />
                    <widget name="web_ribbon" title="Closed" bg_color="text-bg-danger"
                           invisible="status != 'closed'"
                    />

                    <header>
                        <button name="action_new" string="Set New" type="object" class="btn-secondary"
                                groups="todo_managment.todo_managers_group"/>
                        <button name="action_in_progress" string="Start Progress"  type="object" class="btn-primary"
                               invisible="status not in ('new','completed')"
                        />
                        <button name="action_completed" string="Mark Completed" type="object" class="btn-success"
                               invisible="status not in ('new','in_progress')"
                        />

                        <field name="status" widget="statusbar" options="{'clickable' : 0}" />
                    </header>

                    <div>
                        <label for="ref"/>
                        <h1>
                            <field name="ref" string="Reference"/>
                        </h1>
                        <label for="name"/>
                        <h2>
                            <field name="name" readonly="status in ('completed' , 'closed')"/>
                        </h2>
                    </div>

                    <group>
                        <group string="Task Info">
                            <field name="due_date" readonly="status in ('completed' , 'closed')"/>
                            <field name="partner_id" readonly="status in ('completed' , 'closed')"/>
                            <field name="status" invisible="1" />
                            <field name="active" invisible="1" readonly="status in ('completed' , 'closed')"/>
                        </group>

                        <group string="Description">
                            <field name="description" readonly="status in ('completed' , 'closed')"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="time for task" >
                            <field name="estimated_time" readonly="status in ('completed' , 'closed')">
                                <tree editable="button">
                                    <field name="t_description" />
                                    <field name="time_taken" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                 <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>


    <!-- Search View -->
    <record id="view_todo_search" model="ir.ui.view">
        <field name="name">todo.task.search</field>
        <field name="model">todo.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="partner_id"/>

                <filter name="status" string="New Tasks" domain="[('status' , '=' , 'new')]" />
                <filter name="status" string="In Progress Tasks" domain="[('status' , '=' , 'in_progress')]" />
                <filter name="status" string="Completed Tasks" domain="[('status' , '=' , 'completed')]" />

                <filter name="group_due_date" string="Due Date" context="{'group_by' : 'due_date'}"/>
                <filter name="group_partner_id" string="Assign To" context="{'group_by' : 'partner_id'}"/>
                <filter name="group_status" string="Status" context="{'group_by' : 'status'}"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_todo_task" model="ir.actions.act_window">
        <field name="name">To-Do Tasks</field>
        <field name="res_model">todo.task</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Server Action -->
    <record id="server_action_close" model="ir.actions.server" >
        <field name="name">Closed</field>
        <field name="model_id" ref="model_todo_task" />
        <field name="binding_model_id" ref="model_todo_task" />
        <field name="state" >code</field>
        <field name="code" >
            action = records.action_closed()
        </field>
        <field name="binding_view_types">list,form</field>
    </record>

    <!-- Server Action Wizard -->
        <record id="assign_tasks_server_action" model="ir.actions.server">
            <field name="name">Assign Tasks</field>
            <field name="model_id" ref="model_todo_task"/>
            <field name="binding_model_id" ref="model_todo_task"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="code">
                action = records.action_assign_tasks_wizard()
            </field>
        </record>


    <!-- Automated Action -->
    <record id="automated_action_late_due_date" model="ir.cron">
        <field name="name">Due Date Late</field>
        <field name="model_id" ref="model_todo_task"/>
        <field name="state">code</field>
        <field name="code">model.check_due_date()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
    </record>

    <!-- Menu -->
   <menuitem id="tasks_menu_view"
          name="All Tasks"
          parent="menu_todo_task"
          action="action_todo_task"
   />
</odoo>
