<odoo>
    <record id="assign_tasks_to_user_form" model="ir.ui.view">
        <field name="name">assign.tasks.to.user.form</field>
        <field name="model">assign.tasks.to.emp.wizard</field>
        <field name="arch" type="xml">
            <form string="Assign Tasks To User">
                <group>
                    <field name="partner_id"/>
                </group>
                <footer>
                    <button string="Confirm" type="object" name="action_assign" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="window_action_wizard" model="ir.actions.act_window">
        <field name="name">Assign Tasks To User</field>
        <field name="res_model">assign.tasks.to.emp.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
